{
	"name": "vscode-clog",
	"publisher": "bigyue",
	"displayName": "Bigyue's Clog Support",
	"description": "A Markdown Preview with Front Matter for bigyue.cn",
	"version": "0.0.5",
	"engines": {
		"vscode": "^1.66.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/yue1124/vscode-clog.git"
	},
	"icon": "statics/icon.png",
	"categories": [
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"onCommand:clog.showPreview",
		"onLanguage:markdown"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Clog",
			"properties": {
				"clog.updateFrontMatterOnSave": {
					"type": "boolean",
					"default": true,
					"description": "auto update front matter's information on saving markdown file."
				},
				"clog.createFrontMatterOnSave": {
					"type": "boolean",
					"default": false,
					"description": "add front matter for markdown file on saving it."
				},
				"clog.fieldOfCreatedTime": {
					"type": ["string", "null"],
					"default": null,
					"description": "created_time的字段名"
				},
				"clog.fieldOfModifiedTime": {
					"type": ["string", "null"],
					"default": null,
					"description": "last_modify的字段名"
				}
			}
		},
		"commands": [
			{
				"command": "clog.showPreview",
				"icon": "$(open-preview)",
				"title": "Show Preview"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceExtname == .md",
					"command": "clog.showPreview",
					"group": "navigation"
				}
			]
		},
		"snippets": [
			{
				"language": "markdown",
				"path": "./snippets/markdown.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.66.0",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"moment": "^2.29.3"
	}
}
